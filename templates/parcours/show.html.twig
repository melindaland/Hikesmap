{% extends 'base.html.twig' %}

{% block title %}Parcours{% endblock %}
{% block nav %}
<nav>
    <a href="{{ path('accueil') }}"><i class="bi bi-house"></i></a>
    <a href="{{ path('carte') }}"><i class="bi bi-geo-alt"></i></a>
    <a href="{{ path('app_forum_sujet_index') }}"><i class="bi bi-chat-dots"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}"><i class="bi bi-gear"></i></a>
    {% endif %}
    <a href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-left"></i></a>
</nav>
{% endblock %}
{% block body %}
    <h1>{{ parcours.nom }}</h1>
    <table class="table">
            <ul class="ul_show">
                <li><strong>Id : </strong>{{ parcours.id }}</li>
                <li><strong>Description :</strong> {{ parcours.description }}</li>
            </ul>
    </table>
    <h3 class="h3_show">Marqueurs associés :</h3>
<ul class="ul_show">
    {% for marqueur in parcours.marqueurs %}
        <li>
            <strong>{{ marqueur.titre }}</strong>
            Latitude: {{ marqueur.latitude }}
            Longitude: {{ marqueur.longitude }}
            <p>{{ marqueur.description }}</p>
        </li>
    {% else %}
        <li>Aucun marqueur associé.</li>
    {% endfor %}
</ul>
    <a href="{{ path('app_parcours_edit', {'id': parcours.id}) }}" class="btn_show btn-secondary_show">Modifier</a>
    {{ include('parcours/_delete_form.html.twig') }}
    <a href="{{ path('app_parcours_index') }}" class="btn_show btn-primary_show">Retour à la liste</a>
{% endblock %}
{% block footer %}
<div class="foot">
    <hr>
    <p>Mentions légales - © 2025 - ALAND DRINNHAUSEN SCHMITT</p>
</div>
{% endblock %}
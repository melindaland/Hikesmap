<form class="delete" method="post" action="{{ path('app_parcours_delete', {'id': parcours.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parcours.id) }}">
    {% if is_granted('ROLE_ADMIN') %}
    <button class="btn delete2"><i class="bi bi-trash"></i></button>
    {% endif %}
</form>

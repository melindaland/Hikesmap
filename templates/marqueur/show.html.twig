{% extends 'base.html.twig' %}

{% block title %}Marqueur{% endblock %}

{% block nav %}
<nav>
    <a href="{{ path('accueil') }}"><i class="bi bi-house"></i></a>
    <a href="{{ path('carte') }}"><i class="bi bi-geo-alt"></i></a>
    <a href="{{ path('app_forum_sujet_index') }}"><i class="bi bi-chat-dots"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}"><i class="bi bi-gear"></i></a>
    {% endif %}
    <a href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-left"></i></a>
</nav>
{% endblock %}

{% block body %}
<h1>Marqueur</h1>

<div class="tablemarqueur">
    <ul class="ulli">
        <li>Id</li>
        <li>{{ marqueur.id }}</li>
    </ul>
    <ul class="ulli">
        <li>Latitude</li>
        <li>{{ marqueur.latitude }}</li>
    </ul>
    <ul class="ulli">
        <li>Longitude</li>
        <li>{{ marqueur.longitude }}</li>
    </ul>
    <ul class="ulli">
        <li>Titre</li>
        <li>{{ marqueur.titre }}</li>
    </ul>
    <ul class="ulli">
        <li>Description</li>
        <li>{{ marqueur.description }}</li>
    </ul>
    <ul class="ulli">
        <li>Image</li>
        <li><img class="imag" src="{{ marqueur.image }}" alt="Image"></li>
    </ul>
    <a class="btn" href="{{ path('app_marqueur_edit', {'id': marqueur.id}) }}">Modifier</a>
    {{ include('marqueur/_delete_form.html.twig') }}
</div>

<a class="btn_show btn-primary_show" href="{{ path('app_marqueur_index') }}">Retour à la liste</a>


{% endblock %}

{% block footer %}
<div class="foot">
    <hr>
    <p>Mentions légales - © 2025 - ALAND DRINNHAUSEN SCHMITT</p>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Modifier Marqueur{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="../assets/styles/marqueur.css">
{% endblock %}

{% block nav %}
<nav>
    <a href="{{ path('accueil') }}"><i class="bi bi-house"></i></a>
    <a href="{{ path('carte') }}"><i class="bi bi-geo-alt"></i></a> 
    <a href="{{ path('app_forum_sujet_index') }}"><i class="bi bi-chat-dots"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}"><i class="bi bi-gear"></i></a>
    {% endif %}
    <a href="{{ path('login') }}"><i class="bi bi-box-arrow-in-left"></i></a>
</nav>
{% endblock %}

{% block body %}
    <h1>Modifier un marqueur</h1>

<div class="new-marq">
    {{ include('marqueur/_form.html.twig', {'button_label': 'Modifier'}) }}
    {{ include('marqueur/_delete_form.html.twig') }}
</div>
<a class="btn_show btn-primary_show" href="{{ path('app_marqueur_index') }}">Retour à la liste</a>


{% endblock %}

{% block footer %}
<div class="foot">
    <hr>
    <p>Mentions légales - © 2025 - ALAND DRINNHAUSEN SCHMITT</p>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Nouveau Message Forum{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="../assets/styles/forum.css">
{% endblock %}

{% block nav %}
<nav>
    <a href="{{ path('accueil') }}"><i class="bi bi-house"></i></a>
    <a href="{{ path('carte') }}"><i class="bi bi-geo-alt"></i></a>
    <a href="{{ path('app_forum_sujet_index') }}"><i class="bi bi-chat-dots"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}"><i class="bi bi-gear"></i></a>
    {% endif %}
    <a href="{{ path('login') }}"><i class="bi bi-box-arrow-in-left"></i></a>
</nav>
{% endblock %}

{% block body %}
<h1>Ajouter nouveau message</h1>
<div class="forumsujet2">
    <div class="barre">
        {{ include('forum_message/_form.html.twig') }}
    </div>
</div>
<a class="btn_show btn-primary_show" href="{{ path('app_forum_sujet_index') }}">Retour aux forum</a>
{% endblock %}

{% block footer %}
<div class="footer">
    <hr>
    <p>Mentions légales - © 2025 - ALAND DRINNHAUSEN SCHMITT</p>
</div>
{% endblock %}
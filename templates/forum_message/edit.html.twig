{% extends 'base.html.twig' %}

{% block title %}Modifier ForumMessage{% endblock %}


{% block nav %}
<nav>
    <a href="{{ path('accueil') }}"><i class="bi bi-house"></i></a>
    <a href="{{ path('carte') }}"><i class="bi bi-geo-alt"></i></a>
    <a href="{{ path('app_forum_sujet_index') }}"><i class="bi bi-chat-dots"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}"><i class="bi bi-gear"></i></a>
    {% endif %}
    <a href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-left"></i></a>
</nav>
{% endblock %}

{% block body %}
<h1>Modifier le message</h1>
<div class="forumsujet2">
    <div class="barre">
        {{ include('forum_message/_form.html.twig', {'button_label': 'Modifier'}) }}
        {{ include('forum_message/_delete_form.html.twig') }}
    </div>
</div>
<a class="btn_show btn-primary_show" href="{{ path('app_forum_message_index') }}">Retour à la liste</a>

{% endblock %}

{% block footer %}
<div class="footer">
